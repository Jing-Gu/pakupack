---
import Layout from "../../layouts/Layout.astro";
import LeftRight from "../../layouts/LeftRight.astro";
import CheckList from "../../components/Checklist";
import NavNext from "../../components/NavNext.astro";
import checklist from "../../../public/checklists/toiletries.json";

const pageEmoji = "ðŸ§´";
const pageTitle = "Toiletries";
const pageBgClass = "bg-chk-cream";
const pageTitleClrClass = "text-chk-charcoal";
const nextPageHref = "/checklists/comfort";
const nextPageTitle = "comfort items";
---

<Layout title=`Pakupack | ${pageTitle}`>
  <LeftRight>
    <div slot="left-side" class=`${pageBgClass} flex flex-col items-center`>
      <div class="mt-auto mb-auto py-12 flex flex-col items-center gap-6">
        <span class="text-3xl text-center">{pageEmoji}</span>
        <h1 class=`text-xl md:text-3xl text-center ${pageTitleClrClass}`>{pageTitle}</h1>
        <NavNext
          href={nextPageHref}
          title={nextPageTitle}
          textColor=`${pageTitleClrClass}`
        />
      </div>
    </div>
    <div slot="right-side" class="p-8 overflow-y-auto">
      <CheckList checklist={checklist} client:load />
    </div>
  </LeftRight>
</Layout>
