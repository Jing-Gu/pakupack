---
import Layout from "../../layouts/Layout.astro";
import LeftRight from "../../layouts/LeftRight.astro";
import CheckList from "../../components/Checklist";
import chkTravelAbroad from "../../../public/checklists/travel_abroad.json";
import chkHealth from "../../../public/checklists/health.json";
import chkElectronics from "../../../public/checklists/electronics.json";
import chkToiletries from "../../../public/checklists/toiletries.json";
import chkClothing from "../../../public/checklists/clothing.json";
import chkComfort from "../../../public/checklists/comfort.json";
import chkHouse from "../../../public/checklists/house.json";

const mergedChecklist = [...chkTravelAbroad, ...chkHealth, ...chkElectronics,
  ...chkToiletries, ...chkClothing, ...chkComfort, ...chkHouse];

const pageEmoji = "✈️";
const pageTitle = "Travel abroad";
const pageBgClass = "bg-chk-teal";
const pageTitleClrClass = "text-chk-cream";
---

<Layout title=`Pakupack | ${pageTitle}`>
  <LeftRight>
    <div slot="left-side" class=`${pageBgClass} flex flex-col items-center`>
      <div class="mt-auto mb-auto py-12 flex flex-col items-center gap-6">
        <span class="text-3xl text-center">{pageEmoji}</span>
        <h1 class=`text-xl md:text-3xl text-center ${pageTitleClrClass}`>{pageTitle}</h1>
      </div>
    </div>
    <div slot="right-side" class="p-8 overflow-y-auto">
      <CheckList checklist={mergedChecklist} client:load/>
    </div>
  </LeftRight>
</Layout>