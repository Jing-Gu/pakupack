---
import Layout from "../layouts/Layout.astro";
import Main from "../layouts/Main.astro";
import Hero from "../components/Hero.astro";
import Card from "../components/Card.astro";
import Cta from "../components/Cta.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
	<div class="bg-chk-cream flex">
		<Main>
			<Hero />
			<h2 class="text-chk-charcoal text-lg">No panic, you can hit the checklist one by one</h2>
			<div class="flex flex-col md:flex-row flex-wrap gap-6">
				<Card href="checklists/essentials" emoji="🪪" title="essentials"/>
				<Card href="checklists/health" emoji="💊" title="health & safety"/>
				<Card href="checklists/electronics" emoji="📷" title="electronics & entertainment"/>
				<Card href="checklists/clothings" emoji="👕" title="clothing & footwear"/>
				<Card href="checklists/toiletries" emoji="🧴" title="toiletries"/>
				<Card href="checklists/comfort" emoji="🕶️" title="comfort items"/>
				<Card href="checklists/house" emoji="🏠" title="never leave your house unattended"/>
			</div>
			<h2 class="text-chk-charcoal text-lg" id="allLists">Or, just tell us what kind of travel are you planning?</h2>
			<div class="flex flex-col md:flex-row flex-wrap gap-6">
				<Card href="checklists/travel-abroad" emoji="✈️" title="travel abroad"/>
				<Card href="checklists/roadtrip" emoji="🚗" title="road trip"/>
				<Card href="checklists/beach" emoji="🏖️" title="beach vacation"/>
				<Card href="checklists/camping" emoji="🏕️" title="camping, hiking & backpacking"/>
				<Card href="checklists/family" emoji="🍼" title="family trip with little ones"/>
			</div>
			<Cta />
		</Main>
	</div>
</Layout>
<Footer />
